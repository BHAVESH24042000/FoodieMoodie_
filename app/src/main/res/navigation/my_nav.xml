<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/recipiesFragment">

    <fragment
        android:id="@+id/recipiesFragment"
        android:name="com.example.foodie_moodie_20.RecipiesFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_recipies" >
        <action
            android:id="@+id/action_recipiesFragment_to_recipesBottomSheet"
            app:destination="@id/recipesBottomSheet" />
        <action
            android:id="@+id/action_recipiesFragment_to_detailsActivity"
            app:destination="@id/detailsActivity" >

        </action>

    </fragment>
    <fragment
        android:id="@+id/favouriteRecipiesFragment"
        android:name="com.example.foodie_moodie_20.FavouriteRecipiesFragment"
        android:label="Favourites"
        tools:layout="@layout/fragment_favourite_recipies" >
        <action
            android:id="@+id/action_favouriteRecipiesFragment_to_detailsActivity"
            app:destination="@id/detailsActivity" />
    </fragment>
    <fragment
        android:id="@+id/foodJokeFragment"
        android:name="com.example.foodie_moodie_20.FoodJokeFragment"
        android:label="Food Jokes"
        tools:layout="@layout/fragment_food_joke" />
    <dialog
        android:id="@+id/recipesBottomSheet"
        android:name="com.example.foodie_moodie_20.RecipesBottomSheet"
        android:label="RecipesBottomSheet" >
        <action
            android:id="@+id/action_recipesBottomSheet_to_recipiesFragment"
            app:destination="@id/recipiesFragment">

            <argument
                android:name="backFromBottomSheet"
                app:argType="boolean"
                android:defaultValue="false" />


        </action>
    </dialog>
    <activity
        android:id="@+id/detailsActivity"
        android:name="com.example.foodie_moodie_20.DetailsActivity"
        android:label="activity_details"
        tools:layout="@layout/activity_details" >

        <argument
            android:name="result"
            app:argType="com.example.foodiepoodie.dataModels.Result" />
    </activity>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.foodie_moodie_20.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
</navigation>